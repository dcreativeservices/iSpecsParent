<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:titleTextColor="@color/white"
        android:elevation="4dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/toolbar"
        android:layout_marginBottom="10dp"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:src="@drawable/ispecs"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:id="@+id/glasses_image"
            android:layout_marginBottom="20dp"/>

        <!-- Header for Total ON Duration -->
        <TextView
            android:id="@+id/totalOnTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Total time glasses were on: 00:00"
            android:textSize="20sp"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:textColor="@color/black"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Detailed Logs"
            android:textAllCaps="false"
            android:minWidth="200dp"
            android:layout_marginTop="20dp"
            android:id="@+id/viewDetailedLogsBtn"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Battery Logs"
            android:id="@+id/viewBatteryLogsBtn"
            android:textAllCaps="false"
            android:minWidth="200dp"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Raw Logs"
            android:minWidth="200dp"
            android:id="@+id/viewRawLogsBtn"
            android:padding="5dp"
            android:textAllCaps="false"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>

</RelativeLayout>
