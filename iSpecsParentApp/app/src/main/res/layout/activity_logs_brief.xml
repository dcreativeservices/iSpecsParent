<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:titleTextColor="@color/white" />

    <!-- Main Scroll Content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_horizontal">

            <!-- Date Range -->
            <TextView
                android:id="@+id/textViewDateRange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2025-06-01 — 2025-06-30"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:background="@drawable/date_range_background"
                android:padding="12dp"
                android:layout_marginBottom="8dp"
                android:drawableEnd="@drawable/ic_calendar"
                android:drawablePadding="8dp"
                android:clickable="true"
                android:focusable="true" />

            <!-- Quick Filters -->
            <LinearLayout
                android:id="@+id/quickFiltersLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp"
                android:gravity="center"
                android:weightSum="4">

                <TextView
                    android:id="@+id/last7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Last 7 Days"
                    android:padding="10dp"
                    android:background="@drawable/filter_chip_unselected"
                    android:textColor="@color/primary"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/last30"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Last 30 Days"
                    android:padding="10dp"
                    android:background="@drawable/filter_chip_unselected"
                    android:textColor="@color/primary"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/prevYear"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Prev Year"
                    android:padding="10dp"
                    android:background="@drawable/filter_chip_unselected"
                    android:textColor="@color/primary"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/currYear"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Curr Year"
                    android:padding="10dp"
                    android:background="@drawable/filter_chip_unselected"
                    android:textColor="@color/primary"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- iSpecs Image -->
            <ImageView
                android:id="@+id/glasses_image"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:src="@drawable/ispecs"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp" />

            <!-- Buttons Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="12dp">

                    <ImageButton
                        android:id="@+id/btnDetailedLogs"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_logs"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Detailed Logs"
                        android:tint="@null" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Detailed"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="12dp">

                    <ImageButton
                        android:id="@+id/btnBatteryLogs"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_battery"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Battery Logs"
                        android:tint="@null" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="iSpec Battery"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="12dp">

                    <ImageButton
                        android:id="@+id/btnRawLogs"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_code"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Raw Logs"
                        android:tint="@null" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Raw"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- 🔋 Battery Info in a Row -->
            <!-- 🔋 Battery Info (Vertical: Battery %, then Legend) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp"
                android:padding="8dp"
                android:background="#f2f2f2"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/textViewBatteryPercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Battery: --%"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/textViewBatteryLegend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Legend: 🔴 ≤20%  •  🔵 21–80%  •  🟢 >80%"
                    android:textSize="14sp"
                    android:textColor="@color/black" />
            </LinearLayout>


            <!-- 📊 Bar Chart -->
            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barChart"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/rounded_edittext"
                android:visibility="visible" />

            <!-- 📝 Summary -->
            <TextView
                android:id="@+id/totalOnTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Summary"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:padding="12dp"
                android:layout_marginTop="16dp"
                android:background="#EEEEEE"
                android:gravity="center" />
        </LinearLayout>
    </ScrollView>

    <!-- 🔄 Progress Overlay -->
    <FrameLayout
        android:id="@+id/progressOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:background="#88000000"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large" />
    </FrameLayout>
</RelativeLayout>
