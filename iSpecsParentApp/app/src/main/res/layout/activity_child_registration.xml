<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    tools:context=".ChildRegistrationActivity">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Register Child"
        app:titleTextColor="@android:color/white"
        android:layout_alignParentTop="true" />

    <!-- Scrollable Form Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:paddingTop="20dp"
            android:paddingBottom="30dp">

            <!-- App Logo (left-shifted) -->
            <ImageView
                android:id="@+id/app_logo"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:translationX="-20dp"
                android:src="@drawable/ispecs_app_image"
                android:contentDescription="@string/app_logo" />

            <!-- Child ID -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Child ID (Unique)"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_regular" />
            <EditText
                android:id="@+id/etChildId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext"
                android:hint="Enter a unique alphanumeric ID"
                android:inputType="text"
                android:padding="10dp"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:maxLength="20"
                android:fontFamily="@font/roboto_regular" />

            <!-- Child Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Child Name"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_regular" />
            <EditText
                android:id="@+id/etChildName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext"
                android:hint="Enter child's name"
                android:inputType="textPersonName"
                android:imeOptions="actionNext"
                android:padding="10dp"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_regular"
                android:maxLength="30" />

            <!-- Passcode -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Child Passcode (4 digits)"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_regular" />
            <EditText
                android:id="@+id/etChildPasscode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext"
                android:hint="Enter 4-digit passcode"
                android:inputType="numberPassword"
                android:imeOptions="actionNext"
                android:padding="10dp"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_regular"
                android:maxLength="4" />

            <!-- MAC Address -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="MAC Address"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_regular" />
            <EditText
                android:id="@+id/etMacAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext"
                android:hint="Enter MAC address (XX:XX:XX:XX:XX:XX)"
                android:inputType="textNoSuggestions"
                android:imeOptions="actionDone"
                android:padding="10dp"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:maxLength="17"
                android:fontFamily="@font/roboto_regular" />

            <!-- Register Child Button -->
            <Button
                android:id="@+id/btnRegisterChild"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/rounded_button"
                android:fontFamily="@font/roboto_regular"
                android:text="Register Child"
                android:textColor="@color/white"
                app:backgroundTint="@color/primary"
                android:minHeight="48dp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
