<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_daily_log"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <!-- Date Range Display -->
    <TextView
        android:id="@+id/textViewDateRange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2025-06-01 â€” 2025-06-30"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:background="@drawable/date_range_background"
        android:padding="12dp"
        android:layout_marginBottom="8dp"
        android:drawableEnd="@drawable/ic_calendar"
        android:drawablePadding="8dp"
        android:clickable="true"
        android:focusable="true" />

    <!-- Quick Filters -->
    <LinearLayout
        android:id="@+id/quickFiltersLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:weightSum="4">

        <TextView
            android:id="@+id/last7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Last 7 Days"
            android:padding="10dp"
            android:background="@drawable/filter_chip_background"
            android:textColor="@color/primary"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/last30"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Last 30 Days"
            android:padding="10dp"
            android:background="@drawable/filter_chip_background"
            android:textColor="@color/primary"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/prevYear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Prev Year"
            android:padding="10dp"
            android:background="@drawable/filter_chip_background"
            android:textColor="@color/primary"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/currYear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Curr Year"
            android:padding="10dp"
            android:background="@drawable/filter_chip_background"
            android:textColor="@color/primary"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Table Header -->
    <LinearLayout
        android:id="@+id/tableHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="8dp"
        android:background="#EEEEEE"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Start"
            android:textStyle="bold"
            android:textSize="16sp"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="End"
            android:textStyle="bold"
            android:textSize="16sp"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Duration"
            android:textStyle="bold"
            android:textSize="16sp"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Status"
            android:textStyle="bold"
            android:textSize="16sp"
            android:gravity="center_horizontal" />
    </LinearLayout>

    <!-- Table Data -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/logsTableRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="8dp" />

    <!-- Summary -->
    <TextView
        android:id="@+id/textViewSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Summary"
        android:textSize="14sp"
        android:textStyle="bold"
        android:padding="8dp"
        android:layout_marginTop="12dp"
        android:background="#EEEEEE" />

</LinearLayout>
